<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorAccent"
    style="@style/MovieTrailersItem"
    >

    <ImageView
        android:id="@+id/trailerIcon"
        android:src="@android:drawable/ic_media_play"
        android:layout_width="@dimen/list_trailer_width"
        android:layout_height="@dimen/list_trailer_height"
        />

    <TextView
        android:id="@+id/trailerName"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/list_trialer_name_left"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>